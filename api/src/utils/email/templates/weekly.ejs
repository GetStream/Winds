            <%= r.title %>
            <%= r.feedUrl %>
        <% } %>

        <h3>stats about winds</h3>
        Users: <%= counts.users %>
        Articles: <%= counts.articles %>
        Episodes: <%= counts.episodes %>
        RSS feeds: <%= counts.rss %>
